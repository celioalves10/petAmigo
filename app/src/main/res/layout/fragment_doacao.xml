<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frame_layout_doacao"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.DoacaoFragment">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraint_layout_doacao"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:id="@+id/cardView_doacao"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@drawable/marketing3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imv_doacao"
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:contentDescription="@string/txt_mkt"
                android:src="@drawable/marketing3" />
        </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/btn_doar10_reais"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/bg_bt_redes_sociais"
            android:shadowColor="@color/black_overlay"
            android:shadowDx="10"
            android:text="@string/txt_doar10"
            android:textColor="@color/com_facebook_button_background_color_focused"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/btn_doar5_reais"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView_doacao" />

        <Button
            android:id="@+id/btn_doar5_reais"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/bg_bt_redes_sociais"
            android:shadowColor="@color/black_overlay"
            android:shadowDx="10"
            android:text="@string/txt_doar5"
            android:textColor="@color/com_facebook_button_background_color_focused"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/btn_doar2_reais"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_doar10_reais" />

        <Button
            android:id="@+id/btn_doar2_reais"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="32dp"
            android:background="@drawable/bg_bt_redes_sociais"
            android:shadowColor="@color/black_overlay"
            android:shadowDx="10"
            android:text="@string/txt_doar2"
            android:textColor="@color/com_facebook_button_background_color_focused"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_doar5_reais" />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>