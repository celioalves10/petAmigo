<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <ImageView
        android:id="@+id/imageView_fot_comentario"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/textView_nome_comentario_user"
        app:layout_constraintStart_toStartOf="@+id/textView_nome_comentario_user"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/camera"
        android:contentDescription="TODO" />

    <TextView

        android:id="@+id/textView_nome_comentario_user"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="2dp"
        android:text="TextViewTitulo"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_fot_comentario" />

    <TextView
        android:id="@+id/textView_corpo_cometario"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="TextViewtexte"
        app:layout_constraintBottom_toBottomOf="@+id/textView_nome_comentario_user"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView_fot_comentario"
        app:layout_constraintTop_toTopOf="@+id/imageView_fot_comentario" />
</android.support.constraint.ConstraintLayout>